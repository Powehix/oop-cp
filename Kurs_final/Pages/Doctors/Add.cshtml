@page
@model Kurs_final.Pages.Doctors.CreateModel

@{
    ViewData["Title"] = "Add";
}

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
<div class="main_home">
    <div class="container_home">
        <div class="head_home">
            <div class="logo_home">
                <img src="~/images/logo2.png" />
                <h2> St. Chill Hospital </h2>
            </div>
            <div class="logined_home">
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm">
                    <i class="fa fa-user" aria-hidden="true"></i> @UserManager.GetUserName(User)
                    <button type="submit"> &nbsp E X I T </button>
                </form>
            </div>
        </div>
        <div class="central_home">
            <div class="menu_home">
                <ul class="accordion-menu">
                    <li>
                        <div class="dropdownlink">
                            <i class="fa fa-info-circle" aria-hidden="true"></i> Information
                        </div>
                        <ul class="submenuItems">
                            <li><a asp-page="/Home">News</a></li>
                            <li><a href="#">Schedule</a></li>
                        </ul>
                    </li>
                    <li>
                        <div class="dropdownlink">
                            <i class="fa fa-database" aria-hidden="true"></i> Database
                        </div>
                        <ul class="submenuItems">
                            <li><a asp-page="/Doctors/Index">List of doctors</a></li>
                            <li><a asp-page="/Patients/Index">List of patients</a></li>
                            <li><a href="#">My patients</a></li>
                        </ul>
                    </li>
                    <li>
                        <div class="dropdownlink">
                            <a asp-page="/Error"><i class="fa fa-address-card" aria-hidden="true"></i> My profile </a>
                        </div>
                    </li>
                    <li>
                        <div class="dropdownlink">
                            <a asp-page="/Contact"><i class="fa fa-phone-square" aria-hidden="true"></i> Contacts </a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="information_home">
                <h3 class="add_head"> Add doctor </h3>
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <div class="form-label">
                                    <label asp-for="Doctor.Name" class="control-label"></label>
                                </div>
                                <div class="form-input">
                                    <input asp-for="Doctor.Name" class="form-control" />
                                </div>
                                <span asp-validation-for="Doctor.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-label">
                                    <label asp-for="Doctor.Birthday" class="control-label"></label>
                                </div>
                                <div class="form-input">
                                    <input asp-for="Doctor.Birthday" class="form-control" />
                                </div>
                                <span asp-validation-for="Doctor.Birthday" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-label">
                                    <label asp-for="Doctor.Specialty" class="control-label"></label>
                                </div>
                                <div class="form-input">
                                    <input asp-for="Doctor.Specialty" class="form-control" />
                                </div>
                                <span asp-validation-for="Doctor.Specialty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-label">
                                    <label asp-for="Doctor.City" class="control-label"></label>
                                </div>
                                <div class="form-input">
                                    <input asp-for="Doctor.City" class="form-control" />
                                </div>
                                <span asp-validation-for="Doctor.City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-label">
                                    <label asp-for="Doctor.Telephone" class="control-label"></label>
                                </div>
                                <div class="form-input">
                                    <input asp-for="Doctor.Telephone" class="form-control" />
                                </div>
                                <span asp-validation-for="Doctor.Telephone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-label">
                                    <label asp-for="Doctor.Adress" class="control-label"></label>
                                </div>
                                <div class="form-input">
                                    <input asp-for="Doctor.Adress" class="form-control" />
                                </div>
                                <span asp-validation-for="Doctor.Adress" class="text-danger"></span>
                            </div>
                            <div class="form-button">
                                <input type="submit" value="Add" class="btn-btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                @*<div>
                        <a asp-page="Index">Back to List</a>
                    </div>*@

            </div>
            <div class="other_home">

            </div>
        </div>
        <div class="adress_home">
            Riga, Maza Zoltides iela 14a <br />
            +37128309993 <br />
            LV-1029
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}